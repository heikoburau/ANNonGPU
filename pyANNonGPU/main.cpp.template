        .def_readonly("gpu", &PsiDeepSigned::gpu)
        .def_readonly("N", &PsiDeepSigned::N)
        .def_readonly("num_params", &PsiDeepSigned::num_params)
        .def_property(
            "params",
            [](const PsiDeepSigned& psi) {return psi.get_params().to_pytensor_1d();},
